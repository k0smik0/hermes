<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button
		android:text="@string/sample_activity_inheriting_button" 
		android:id="@+id/sample_activity_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onClickInheriting" />	
	<Button 
		android:text="@string/sample_activity_compositing_button_text" 
		android:id="@+id/sample_activity_compositing_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onClickCompositing" />
	<Button 
		android:text="@string/sample_activity_local_button" 
		android:id="@+id/sample_activity_local_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onClickHere" />
	
	<TextView
		android:id="@+id/text_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="left"
		android:scrollHorizontally="false"
		android:singleLine="false"
		android:maxLines = "20"
		android:scrollbars="vertical"
		android:textIsSelectable="false"/>
</LinearLayout>
